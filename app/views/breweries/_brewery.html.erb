<div id="<%= dom_id brewery %>">
  <p>
  <h2>
    <%= brewery.name %>
  </h2>
  </p>

  <p>
    <i>Established in: <%= brewery.year %></i>
  </p>

  <p>
    Beers count: <%= brewery.beers.count %>
  </p>

  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>

  <p>
    <% if brewery.ratings.any? %>
      Brewery has <%= brewery.ratings.count %> <%= 'rating'.pluralize(brewery.ratings.count) %>  with an average of <%= brewery.average_rating %>
    <% end %>
  </p>

</div>
