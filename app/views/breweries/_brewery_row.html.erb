  <tr id="<%= dom_id(brewery) %>">
    <td><%= link_to brewery.name, brewery, data: { turbo_frame: "_top" } %></td>
    <td><%= brewery.year %></td>
    <td><%= brewery.beers.count %></td>
    <td><%= round(brewery.average_rating) %></td>
    <% if brewery.active %>
      <td><span class="badge bg-success">active</span></td>
    <% else %>
      <td><span class="badge bg-secondary">retired</span></td>
    <% end %>
    <td><%= link_to("X", brewery, data: {turbo_method: :delete }) %></td>
  </tr>
