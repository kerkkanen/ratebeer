<h2>List of ratings</h2>

<div class="container">

  <div class="row">
    <div class="col-sm-4">
      <h4>Best beers</h4>
      <table>
        <thead>
        <th>beer</th>
        <th>rating</th>
        </thead>
        <tbody>
          <% @beers.each do |beer| %>
            <tr>
              <td><%= link_to beer.name, beer %> </td>
              <td><%= round(beer.average_rating) %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-4">
      <h4>Best styles</h4>
      <table>
        <thead>
        <th>style</th>
        <th>rating</th>
        </thead>
        <tbody>
        <% @styles.each do |style| %>
          <tr>
            <td><%= link_to style.name, style %> </td>
            <td><%= round(style.average_rating) %> </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-4">
      <h4>Best styles</h4>
      <table>
        <thead>
        <th>brewery</th>
        <th>rating</th>
        </thead>
        <tbody>
        <% @breweries.each do |brewery| %>
          <tr>
            <td><%= link_to brewery.name, brewery %> </td>
            <td><%= round(brewery.average_rating) %> </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<h4>Most active raters</h4>

<ol>
  <% @users.each do |user| %>
    <li>
      <%= "#{user.username} #{user.ratings.count}" %>
    </li>
  <% end %>
</ol>

<h4>Recent ratings</h4>

<% unless @page == 1 %>
  <%= link_to "<<< Previous page", ratings_path(page: @page - 1, recent: @recent) %>
<% end %>
<% unless @page == @last_page %>
  <%= link_to "Next page >>>", ratings_path(page: @page + 1, recent: @recent) %>
<% end %>

<ul>
  <% @recent.each do |rating| %>
    <li>
      <%= "#{rating.beer.name} got #{rating.score} points from #{rating.user.username} at #{rating.created_at.strftime("%d.%m.%Y %H:%M")}" %>
    </li>
  <% end %>
</ul>