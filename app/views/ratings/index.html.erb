<h1>Top lists</h1>


<div class="container text-center">
  <div class="row">
    <div class="col-sm-3">
      <h3>Breweries</h3>
        <table class="table">
        <thead>
         <tr>
          <th scope="col">#</th>
          <th scope="col">Brewery</th>
          <th scope="col">Average</th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
          <% @top_breweries.each_with_index do |brewery, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= link_to brewery.name, brewery %></td>
              <td><%= round(brewery.average_rating) %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
    </div>
    <div class="col-sm-9">
      <div class="row">
        <div class="col-8 col-sm-6">
          <h3>Beers</h3>
          <table class="table">
          <thead>
          <tr>
            <th scope="col">Beer</th>
            <th scope="col">Average</th>
          </tr>
          </thead>
          <tbody class="table-group-divider">
            <% @top_beers.each do |beer| %>
              <tr>
                <td><%= link_to beer.name, beer %></td>
                <td><%= round(beer.average_rating) %></td>
              </tr>
            <% end %>
          </tbody>
          </table>
        </div>
        <div class="col-4 col-sm-6">
            <h3>Style</h3>
          <table class="table">
          <thead>
          <tr>
            <th scope="col">Style</th>
            <th scope="col">Average</th>
          </tr>
          </thead>
          <tbody class="table-group-divider">
            <% @top_styles.each do |style| %>
              <tr>
                <td><%= link_to style[0][0], style[0][0] %></td>
                <td><%= style[1] %></td>
              </tr>
            <% end %>
          </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

  <br>



  <h3> Most active users</h3>
    <ol type="1">
      <% @active_users.each do |user| %>
        <li> <%= link_to user.username, user %> <%= "#{user.ratings.count} ratings" %> </li>
      <% end %>
    </ol>


  <br>  

  <h3> Recent ratings</h3>
  <div id="ratings">
    <ul>
      <% @latest_ratings.each do |rating| %>
        <li><%= render rating %> </li>
      <% end %>
    </ul>
  </div>


<%= link_to('New Rating', new_rating_path, class:'btn btn-primary') if current_user %>
  


