<h2>Beer tax calculator</h2>

<div data-controller="calculator" data-calculator-vat-value="<%= @vat %>" data-calculator-amounts-value="<%= @amounts %>" class="container">
  <form data-action="calculator#calculate">
    <div>
      <label>Amount</label>
      <select type="number" data-calculator-target="amount" data-action="calculator#change">
        <%= @amounts.each do |a| %>
          <option><%= a %></option>
        <% end %>
        <option>Custom</option>
      </select>
    </div>
    <div id="customInput">
    </div>
    <div>
      <label>Alcohol by volume (ABV)</label>
      <input type="number" min="0" step="0.01" value="0.00" required="true" data-calculator-target="abv"/>
      <label>%</label>
    </div>
    <div>
      <label>Price </label>
      <input type="number" min="0" step="0.01" value="0.00" required="true" data-calculator-target="price"/>
      <label>â‚¬</label>
    </div>
    <div>
      <p>Value added tax <%= @vat * 100 %>%</p>
    </div>
    </br>
    <button>Calculate</button>
  </form>
  </br>
  <button data-action="calculator#reset">Reset</button>
  </br>
  <div id="result">
  </div>
</div>