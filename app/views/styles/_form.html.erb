<%= form_with(model: style) do |form| %>
  <% if style.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(style.errors.count, "error") %> prohibited this style from being saved:</h2>

      <ul>
        <% style.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input type="string" class="form-control" id=<%= form.text_field :name %>
  </div>
  <div class="mb-3">
    <label class="form-label">Description</label>
    <textarea class="form-control" rows="5" id=<%= form.text_area :description %>
  </div>
  <button class="btn btn-primary", type=<%= form.submit %>Submit</button>
  </form>
<% end %>
