<h1>Users</h1>

  <table class="table table-divider">
 <thead>
   <th>Name</th>
   <th>Ratings</th>
   <th>Beer clubs</th>
 </thead>
 <% @users.each do |user| %>
   <tr>
    <td><%= link_to user.username, user %></td>
    <td><%= user.ratings.count() %></td>
    <% if user.memberships.empty?%>
      <td>No memberships</td> 
    <% else %>
      <% user.memberships.each do |club| %>
        <td><%= link_to club.beer_club.name, club.beer_club %></td>
       <% end %>
    <% end %>     
   </tr>
 <% end %>
</table>

<%= link_to "New user", new_user_path, class:'btn btn-primary' %>
