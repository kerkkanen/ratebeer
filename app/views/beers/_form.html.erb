<%= form_with(model: beer) do |form| %>
  <% if beer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
        <% beer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form>
    <div class="mb-3">
      <label class="form-label">Name</label>
      <input type="text" class="form-control" id=<%= form.text_field :name %>
    </div>
    <div class="mb-3">
      <label class="form-label">Style</label>
      <select <%= form.collection_select :style_id, @styles, :id, :name %>
    </div>
    <div class="mb-3">
      <label class="form-label">Brewery</label>
      <select <%= form.collection_select :brewery_id, @breweries, :id, :name %>
    </div>
    <button class="btn btn-primary", type=<%= form.submit %>Submit</button>
  </form>
<% end %>

