<p style="color: green"><%= notice %></p>

<%= render @beer_club %>

<% if current_user && @memberships.where(user_id: current_user, beer_club_id: @beer_club.id).empty?%>

  <h4>join the club:</h4>
  
  <%= form_with(model: @membership) do |form| %>
    <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.submit "Join the beer club" %>
  <% end %>

<% else %>
    <% if current_user %>
    <%= form_with(model: @user_membership, method: :delete) do |form| %>      
      <%= form.submit "End the membership" %>
    <% end %>
  <% end %>
<% end %>

<div>
  <p><%= link_to('Edit this beer club', edit_beer_club_path(@beer_club)) if current_user %></p>
  <p><%= button_to "Destroy this beer club", @beer_club, method: :delete if current_user%></p>  

  <p><%= link_to "Back to beer clubs", beer_clubs_path %></p>
</div>
